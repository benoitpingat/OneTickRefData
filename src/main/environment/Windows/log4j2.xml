<?xml version="1.0" encoding="UTF-8" ?>

<Configuration>

    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} %-5p %c{1.} [%t] %m%n"/>
        </Console>
    </Appenders>

    <Loggers>

        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>

    </Loggers>

</Configuration>
